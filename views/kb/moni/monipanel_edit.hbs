<div class="col-md-12">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ol class="breadcrumb">
        <li><a href="{{app_context}}/monitors">{{__ "Orgnization"}}({{result.orgId}})</a></li>
        <li><a href="{{app_context}}/monitors/{{result.orgId}}/{{result.category_id}}">{{__ "Category"}}({{result.category_name}})</a></li>
      </ol>
      <h1>{{__ "Panels edit"}}</h1>
      <form method="post" id="edit_form" action="{{app_context}}/monitors/{{result.orgId}}/{{result.category_id}}/panel_update" data-toggle="validator">
        <input type="hidden" name="panels_old_name" value="{{result.name}}" />
        <div class="form-group">
          <label>{{__ "Panels name"}} *</label>
          <input type="text" class="form-control" name="panels_name" value={{result.name}} required>
        </div>
        <div class="form-group">
          <label>{{__ "Panels url"}} *</label>
          <input type="text" class="form-control" name="panels_url" value={{result.url}} required>
        </div>
        <div class="form-group">
          <div class="pull-right">
            <button type="submit" class="btn btn-primary">{{__ "Update"}}</button>
          </div>
        </div>
    </div>
  </div>
</div>