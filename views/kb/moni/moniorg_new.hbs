<div class="col-md-12">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ol class="breadcrumb">
                <li><a href="{{app_context}}/orgs">{{__ "Orgnization"}}</a></li>
            </ol>
            <h1>{{__ "New Orgnization"}}</h1>
            <form method="post" id="edit_form" action="{{app_context}}/org_insert" data-toggle="validator">
                <div class="form-group">
                    <label>{{__ "Orgnization name"}} *</label>
                    <input type="text" class="form-control" name="users_name" value="{{user.users_name}}" required>
                </div>
                {{#if defaulPasswd}}
                    <div class="form-group">
                        <label>{{__ "Orgnization password"}} *({{__ "default passwd declaratioin"}})</label>
                        <input type="password" class="form-control" id="user_password" name="user_password" value="{{defaulPasswd}}" required>
                    </div>
                {{else}}
                    <div class="form-group">
                        <label>{{__ "Orgnization password"}} *</label>
                        <input type="password" class="form-control" id="user_password" name="user_password"  required>
                    </div>
                    <div class="form-group">
                        <label>{{__ "Password confirm"}} *</label>
                        <input type="password" data-match="#user_password"  class="form-control" name="frm_user_password_confirm"  required>
                    </div>
                {{/if}}
                <div class="form-group">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary">{{__ "Create Orgnization"}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
