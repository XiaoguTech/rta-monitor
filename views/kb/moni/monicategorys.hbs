<div class="col-md-12">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ol class="breadcrumb">
        <li><a href="{{app_context}}/monitors">{{__ "Orgnization"}}({{result.orgId}})</a></li>
      </ol>
      <h1>{{__ "Category"}} <span class="pull-right"><a href="{{app_context}}/monitors/{{result.orgId}}/new" class="btn btn-primary">{{__ "New category"}}</a></span></h1>
      <ul class="list-group">
        {{#each result.categoryArray}}
          <li class="list-group-item">
            <strong>{{__ "Category"}}:</strong> <a href="{{app_context}}/monitors/{{../result.orgId}}/{{this.category_id}}">{{this.category_name}}</a>
            <span class="pull-right">
                {{#is_an_admin ../session.is_admin}}
                  <a href="{{app_context}}/monitors/{{../result.orgId}}/edit/{{this.category_id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                  <a href="{{app_context}}/monitors/{{../result.orgId}}/delete/{{this.category_id}}" onclick="return confirm('{{__ "Are you sure you want to delete?"}}')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                {{/is_an_admin}}
            </span>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
