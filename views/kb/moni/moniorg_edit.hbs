<div class="col-md-12">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ol class="breadcrumb">
                <li><a href="{{app_context}}/orgs">{{__ "Orgnization"}}</a></li>
            </ol>
            <h1>{{__ "Orgnization edit"}}</h1>
            <form method="post" id="edit_form" action="{{app_context}}/user_update" data-toggle="validator">
                <input type="hidden" name="user_id" value="{{user._id}}" />
                <div class="form-group">
                    <label>{{__ "Orgnization name"}}</label>
                    <input type="text" class="form-control" name="users_name" value="{{user.users_name}}" required>
                </div>
                {{#is_an_admin session.is_admin}}
                    <div class="form-group">
                        <label>{{__ "Orgnization password"}}</label>
                        <input type="password" class="form-control" name="user_password" >
                    </div>
                    <div class="form-group">
                        <label>{{__ "Orgnization confirm"}}</label>
                        <input type="password" data-validation-match-match="user_password" data-validation-match-message="{{__ "Password values do not match"}}" class="form-control" name="frm_user_password_confirm" >
                    </div>
                {{/is_an_admin}}
                <div class="form-group">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary">{{__ "Update"}}</button>
                    </div>
                </div>
        </div>
    </div>
</div>
